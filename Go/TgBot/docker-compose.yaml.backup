services:
  # База данных PostgreSQL
  postgres:
    image: postgres:15-alpine
    container_name: expenses-postgres
    environment:
      POSTGRES_USER: expenses
      POSTGRES_PASSWORD: expenses_password
      POSTGRES_DB: expenses
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U expenses -d expenses"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Наш Go-сервис
  api:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: expenses
    environment:
      PORT: 8080
      DB_HOST: postgres
      DB_PORT: 5432
      DB_USER: expenses
      DB_PASSWORD: expenses_password
      DB_NAME: expenses
    ports:
      - "8080:8080"
    depends_on:
      postgres:
        condition: service_healthy

volumes:
  postgres_data: